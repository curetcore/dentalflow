{
  "schema": "1",
  "services": [
    {
      "name": "app",
      "type": "app",
      "build": {
        "type": "dockerfile",
        "dockerfile": "./landing-page/Dockerfile",
        "context": "./landing-page"
      },
      "domains": [
        {
          "host": "app.dentalflow.do",
          "port": 3000
        }
      ],
      "env": {
        "NEXT_PUBLIC_API_URL": "https://api.dentalflow.do",
        "NODE_ENV": "production"
      }
    },
    {
      "name": "postgres",
      "type": "postgres",
      "version": "15",
      "password": "generate://32",
      "data": "/data/postgres"
    },
    {
      "name": "redis",
      "type": "redis",
      "version": "7-alpine",
      "data": "/data/redis"
    },
    {
      "name": "n8n",
      "type": "app",
      "image": "n8nio/n8n:latest",
      "domains": [
        {
          "host": "flows.dentalflow.do",
          "port": 5678
        }
      ],
      "volumes": [
        {
          "type": "volume",
          "source": "n8n_data",
          "target": "/home/node/.n8n"
        }
      ],
      "env": {
        "N8N_BASIC_AUTH_ACTIVE": "true",
        "N8N_BASIC_AUTH_USER": "@N8N_USER",
        "N8N_BASIC_AUTH_PASSWORD": "@N8N_PASSWORD",
        "WEBHOOK_URL": "https://hooks.dentalflow.do"
      }
    }
  ]
}